<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OrderManagement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:account="clr-namespace:OrderManagement.Views.Account"
    xmlns:order="clr-namespace:OrderManagement.Views.Order"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Login"
                  ContentTemplate="{DataTemplate account:Login}"
                  Route="Login"/>

    <ShellContent Title="Orders"
                  ContentTemplate="{DataTemplate order:Orders}"
                  Route="Orders"/>

</Shell>
